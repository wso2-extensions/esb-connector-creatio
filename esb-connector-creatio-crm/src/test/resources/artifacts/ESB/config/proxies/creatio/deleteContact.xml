<?xml version="1.0" encoding="UTF-8"?>
<proxy xmlns="http://ws.apache.org/ns/synapse"
       name="deleteContact"
       startOnLoad="true"
       statistics="disable"
       trace="disable"
       transports="http,https">
<target>
    <inSequence>
        <property name="contactId" expression="get-property('axis2', 'REST_URL_POSTFIX')"/>
        <log description="config" level="custom">
            <property expression="$ctx:contactId" name="contactId......."/>
        </log>
        <property expression="fn:substring($ctx:contactId, 12,36)" name="id" scope="default" type="STRING"/>
        <log description="config" level="custom">
            <property expression="$ctx:id" name="id......."/>
        </log>
        <creatiocrm.init>
            <creatioHostName>https://creatio-host-name.com</creatioHostName>
            <creatioPassword>adminpassword</creatioPassword>
            <creatioUsername>adminusername</creatioUsername>
        </creatiocrm.init>
        <creatiocrm.contactDelete>
            <id>{$ctx:id}</id>
        </creatiocrm.contactDelete>
        <respond/>
    </inSequence>
    <outSequence/>
    <faultSequence/>
</target>
<description/>
</proxy>
